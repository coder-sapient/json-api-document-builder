{
    "name": "coder-sapient/json-api-document-builder",
    "description": "Json Api Document Builder",
    "keywords": ["json-api", "api"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Yaroslav Khalupiak",
            "email": "i.am.khalupiak@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "json-api-php/json-api": "^2.2",
        "guzzlehttp/promises": "^1.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.15",
        "laminas/laminas-diactoros": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "CoderSapient\\JsonApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoderSapient\\JsonApi\\Tests\\": "tests",
            "CoderSapient\\JsonApi\\Examples\\": "examples"
        }
    }
}
